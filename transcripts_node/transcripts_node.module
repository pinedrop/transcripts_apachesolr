function transcripts_node_preview_transcript_callback($form, $form_state) {
    $file = file_load($form_state['values']['transcript_fid']);
    $node = node_load($form_state['values']['transcript_nid']);
    watchdog("transcripts_node", "File=".$file->uri." Node=".$node->nid, NULL, WATCHDOG_INFO);
    $tcus = transcripts_xslt_as_tcus($file, $node);
    if ($tcus == false) {
        return "false";
    }
    else {
        return dprint_r($tcus, TRUE);
    }
}